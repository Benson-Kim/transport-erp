# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Enterprise Dashboard"
NEXT_PUBLIC_APP_DESCRIPTION="Complete enterprise management system"

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/enterprise_dashboard?schema=public"
DATABASE_URL_NON_POOLING="postgresql://user:password@localhost:5432/enterprise_dashboard?schema=public"

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-minimum-32-characters-long

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email Service (SendGrid/Resend/etc)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# File Storage (AWS S3 or Cloudinary)
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Or for Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# API Keys
OPENAI_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
GOOGLE_MAPS_API_KEY=

# Security
ENCRYPTION_KEY=your-encryption-key-minimum-32-characters
JWT_SECRET=your-jwt-secret-minimum-32-characters
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
VERCEL_ANALYTICS_ID=

# Feature Flags
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_EMAIL_VERIFICATION=true

# Development Tools
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false
